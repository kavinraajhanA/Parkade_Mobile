<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageProfile.versuccess"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Verification Successfull" FontAttributes="Bold" TextColor="#223A66"  HorizontalOptions="CenterAndExpand" Margin="0,250,0,0"></Label>

            <Image Source="checked" HeightRequest="150" HorizontalOptions="CenterAndExpand" Margin="0,60,0,0" ></Image>



            <Button Text="Continue" Clicked="Continue" BackgroundColor="#C17FFB" TextColor="#223A66" Margin="60,60,60,0"  CornerRadius="15"  ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>